package com.techouts.dao;

import java.util.List;

import org.springframework.orm.hibernate5.HibernateTemplate;

import com.techouts.entities.Order;
import com.techouts.entities.Product;

public class OrderDao {

	private HibernateTemplate template;

	public HibernateTemplate getTemplate() {
		return template;
	}

	public void setTemplate(HibernateTemplate template) {
		this.template = template;
	}
	
	public void save(Order order)
	{
		this.template.save(order);
	}

	public List<Order> loadAll() {

		List<Order> orderList=this.template.loadAll(Order.class);
		
		return orderList;
	}

	public Order getOrderById(int orderId) {
  
		Order orderObj=this.template.get(Order.class, orderId);
		return orderObj;
	}

}
